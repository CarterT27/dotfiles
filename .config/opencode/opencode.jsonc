{
    "$schema": "https://opencode.ai/config.json",
    "theme": "system",
    "autoupdate": true,
    "permission": {
        "edit": "allow",
        "bash": {
            "*": "ask",
            "pwd": "allow",
            "git status": "allow",
            "ls": "allow",
            "bun run build": "allow"
        },
        "webfetch": "allow",
        "doom_loop": "ask",
        "external_directory": "ask"
    },
    "mcp": {
        "github": {
            "type": "remote",
            "url": "https://api.githubcopilot.com/mcp/",
            "headers": {
                "Authorization": "Bearer {env:GITHUB_MCP_PAT}"
            },
            "enabled": false
        },
        "cloudflare-observability": {
            "type": "local",
            "command": ["npx", "mcp-remote", "https://observability.mcp.cloudflare.com/mcp"],
            "enabled": false
        },
        "cloudflare-bindings": {
            "type": "local",
            "command": ["npx", "mcp-remote", "https://bindings.mcp.cloudflare.com/mcp"],
            "enabled": false
        },
        "convex": {
            "type": "local",
            "command": ["npx", "-y", "convex@latest", "mcp", "start"],
            "enabled": false
        },
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "enabled": true
        },
        "gh_grep": {
            "type": "remote",
            "url": "https://mcp.grep.app",
            "enabled": false
        },
    },
    "agent": {
        "tutor": {
            "description": "Socratic tutor that guides homework without doing it",
            "mode": "all",
            "prompt": "You are Tutor, a Socratic teaching assistant. Your default behavior is to guide the student to their own solution without doing the homework for them or externalizing their reasoning. Ask short, targeted questions that elicit the student's intuition, plan, or partial work. Provide hints in small steps, confirm correct reasoning, and gently correct misconceptions. Only provide full explanations or direct solutions when the user explicitly asks you to explain or to do something. When asked to explain, provide a clear, concise explanation and then offer a brief follow-up question to check understanding. Avoid solving the entire problem unprompted; prefer scaffolding and checkpoints."
        }
    },
    "provider": {
        "openai": {
            "options": {
                "reasoningEffort": "medium",
                "reasoningSummary": "auto",
                "textVerbosity": "medium",
                "include": [
                    "reasoning.encrypted_content"
                ],
                "store": false
            }
        }
    },
    "plugin": ["opencode-gemini-auth@latest"]
}
